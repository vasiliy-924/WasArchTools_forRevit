<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Выбор типа розетки" Height="300" Width="400">
  <StackPanel Margin="10">
    <TextBlock Text="Выберите тип розетки:" FontSize="16" Margin="0,0,0,10"/>
    <ListBox Name="SocketTypeList" Height="180" Margin="0,0,0,10"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Name="OkBtn" Content="OK" Width="80" Margin="0,0,10,0" Click="on_ok"/>
      <Button Name="CancelBtn" Content="Отмена" Width="80" Click="on_cancel"/>
    </StackPanel>
  </StackPanel>
</Window> 